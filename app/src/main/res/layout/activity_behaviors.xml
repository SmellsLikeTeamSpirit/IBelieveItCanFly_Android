<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:inputType="numberSigned"
            android:id="@+id/editDistance"
            android:hint="Distance(m)"
            android:layout_weight="5"
            android:gravity="center_horizontal" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:inputType="numberSigned"
            android:id="@+id/editAngle"
            android:hint="Angle(deg)"
            android:layout_weight="5"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#FFCC00"
            android:layout_margin="15dp"
            android:id="@+id/btnDistance"
            android:text="GO STRAIGHT AHEAD"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#FFCC00"
            android:layout_margin="15dp"
            android:id="@+id/btnTurn"
            android:text="TURN AROUND"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#FFCC00"
            android:layout_margin="15dp"
            android:id="@+id/btnFixedAngle"
            android:text="MOVE WITH FIXED ANGLE"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#FFCC00"
            android:layout_margin="15dp"
            android:id="@+id/btnObst"
            android:text="Go Until Obstacle"/>
    </LinearLayout>

</LinearLayout>
